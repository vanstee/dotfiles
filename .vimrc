execute pathogen#infect()

set autoindent
set expandtab
set fillchars=
set hidden
set hlsearch
set incsearch
set nocompatible
set noswapfile
set nowrap
set number
set showmatch
set tabstop=2 shiftwidth=2

filetype plugin indent on

let &t_Co=256
syntax on
colorscheme github

map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>
